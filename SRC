import os
import subprocess

# Function to check if yt-dlp is installed
def check_yt_dlp():
    try:
        subprocess.run(["yt-dlp", "--version"], capture_output=True, check=T>
    except FileNotFoundError:
        print("\nâš ï¸ yt-dlp not found! Installing...\n")
        os.system("pkg install yt-dlp -y")
        print("\nâœ… yt-dlp installed successfully!\n")

# Function to list available formats (for debugging)
def list_formats(url):
    print("\nğŸ“Œ Fetching available formats...\n")
    os.system(f'yt-dlp -F "{url}"')

# Function to download media
def download_media(url, media_type):
    storage_path = os.path.expanduser("~/storage/shared")

    if media_type == "audio":
        folder = "Music"
        command = f'yt-dlp -x --audio-format mp3 -o "{storage_path}/{folder}>
    else:
        folder = "Movies"
        command = f'yt-dlp -f "bv*+ba/b" -o "{storage_path}/{folder}/%(title>

    print(f"\nâ³ Downloading to {storage_path}/{folder}/ ...\n")
    os.system(command)

# Main function
if __name__ == "__main__":
    check_yt_dlp()

    url = input("\nğŸ¥ Enter YouTube URL: ").strip()

    print("\nğŸ”¹ Choose format:")
    print("   1ï¸âƒ£ MP3 (Audio)")
    print("   2ï¸âƒ£ MP4 (Video)")
    print("   3ï¸âƒ£ Show available formats")

    choice = input("ğŸ“Œ Enter 1, 2, or 3: ").strip()

    if choice == "3":
        list_formats(url)
    else:
        media_type = "audio" if choice == "1" else "video"
        download_media(url, media_type)
        print("\nâœ… Download complete! Check your Music or Movies folder.")
